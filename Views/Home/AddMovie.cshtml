@{
    ViewBag.Title = "The Joel Hilton Film Collection";
    ViewBag.Header = "Add a Movie to Joel's List!";
}

@model MovieList.Models.AddMovie

<div class="container">
    <form asp-action="AddMovie" method="post">
        <div class="form-group">
            <label asp-for="Category">Category:</label>
            <input asp-for="Category" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="MovieTitle">Title:</label>
            <input asp-for="MovieTitle" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="Year">Year:</label>
            <input asp-for="Year" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="Director">Director:</label>
            <input asp-for="Director" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="Rating">Rating:</label>
            <select asp-for="Rating">
                <option value="">Select One</option>
                <option value="G">G</option>
                <option value="PG">PG</option>
                <option value="PG-13">PG-13</option>
                <option value="R">R</option>
            </select>
        </div>

        <div class="form-group">
            <label asp-for="Edited">Edited:</label>
            <select asp-for="Edited">
                <option value="">Select One</option>
                <option value="true">Yes</option>
                <option value="false">No</option>
            </select>
        </div>

        <div class="form-group">
            <label asp-for="LentTo">Lent To:</label>
            <input asp-for="LentTo" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="Notes">Notes:</label>
            <input asp-for="Notes" class="form-control" />
        </div>

        <div asp-validation-summary="All"></div>

        <button type="submit" class="btn btn-primary">Add</button>
        <button class="btn btn-primary" asp-action="Movie">Cancel</button>
    </form>
</div>
